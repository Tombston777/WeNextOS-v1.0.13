│   └── taskmgr.c              ; مدير المهام
│
├── omnitrix_ui/
│   ├── omnitrix.c             ; واجهة المستخدم الرسومية
│   └── renderer.c             ; ريندر الواجهة
│
├── fs/
│   ├── vfs.c                  ; نظام الملفات الوهمي
│   └── ext2.c                 ; دعم ملفات ext2
│
├── user/
│   ├── apps/                  ; تطبيقات المستخدم
│   └── login.c                ; شاشة الدخول
